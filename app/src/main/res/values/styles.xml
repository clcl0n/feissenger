<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorAccent">?attr/text_color</item>
        <item name="android:editTextColor">?attr/text_color</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="sender">@color/blue</item>
        <item name="recipient">@color/gray</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="background_color">@color/black</item>
        <item name="text_color">@color/white</item>
        <item name="sender">@color/blue</item>
        <item name="recipient">@color/gray</item>
    </style>
    
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">?attr/text_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:layout_margin">@dimen/thick</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:layout_margin">@dimen/thick</item>
    </style>
</resources>