<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:editTextColor">?attr/text_color</item>
        <item name="android:textColorHint">@color/gray</item>
<!--        <item name="android:textCursorDrawable">@null</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="sender">@color/blue</item>
        <item name="recipient">@color/gray</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="background_color">@color/black</item>
        <item name="text_color">@color/white</item>
        <item name="sender">@color/blue</item>
        <item name="recipient">@color/gray</item>
    </style>
</resources>